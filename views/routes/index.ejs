<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
     <%- include('../partials/header') %>
    <div class="container">
        <h1>Messages</h1>

        <div class="messages">
            <% messages.forEach((message, index) => { %>
                <div class="chat-message">
                    <div class="username">
                        <h3><%= message.user %></h3>
                    </div>
                    <p><%= message.text %></p>
                    <p class="timestamp"><%= message.added %></p>
                    <a href="/messages/<%= index %>" class="open">Open</a>
                </div>
             <% }) %>
        </div>
        <br>
        <a class="new-message" href="/new">New Message</a>
    </div>
</body>
</html>
